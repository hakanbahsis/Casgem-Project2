@model IEnumerable<Casgem_CodeFirstProject.DAL.Entities.Booking>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2>Rezervasyon Lİstesi</h2>

<p>
    @Html.ActionLink("Kayıt Oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
