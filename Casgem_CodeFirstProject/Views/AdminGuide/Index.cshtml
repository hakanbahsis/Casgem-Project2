@model List<Casgem_CodeFirstProject.DAL.Entities.Guide>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<h2>Rehber Listesi</h2>
<table class="table table-bordered" >
    <tr>
        <td>#</td>
        <td>Rehber Adı</td>
        <td>Ünvanı</td>
        <td>Resim</td>
        <td>Güncelle</td>
        <td>Sil</td>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.GuideName</td>
            <td>@item.Title</td>
            <td>@item.ImageUrl</td>
            <td><a href="/AdminGuide/UpdateGuide/@item.GuideId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/AdminGuide/DeleteGuide/@item.GuideId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="#" class="btn btn-success">Yeni Kayıt</a>
